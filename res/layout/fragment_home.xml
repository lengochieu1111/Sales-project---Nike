<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/progressBar_loadding_Home"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/llt_home"
        app:layout_constraintEnd_toStartOf="@+id/llt_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/llt_home"
        app:layout_constraintTop_toBottomOf="@+id/llt_home"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/llt_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ListView
            android:id="@+id/liv_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="1.5dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>